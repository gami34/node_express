        <header class="bottom-border py-2 mb-2 bottom-border"><h5>Dashboard Settings</h5></header>
        <section class=" py-2 mb-2">
          <div class="bottom-border pb-2 mb-2">
            <h6>Dashboard Color:</h6>
            <button class="btn btn-dark btn-sm p-3 dash_color"></button>
            <button class="btn btn-warning btn-sm p-3 dash_color"></button>
